<!-- Start Categories  -->
<div class="categories-shop">
    <div class="container">
        <div class="row">
            {{#each booksToShow}}
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                {{#each col}}
                <div class="shop-cat-box">
                    <img class="img-fluid" src="{{image_link}}" alt="" />
                    <a class="btn hvr-hover" href="/bookslist/{{_id}}">{{categoryName}}</a>
                </div>
                {{/each}}
            </div>
            {{/each}}
        </div>
    </div>
</div>

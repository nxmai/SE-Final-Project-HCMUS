<div>
    <form method="POST" action="/changeAccountInfo" enctype="multipart/form-data" class="form-horizontal">
        <fieldset>
            <!-- Form Name -->
            <legend class="text-center">Chỉnh sửa thông tin của bạn</legend>
            <!-- Text input-->

            <div style = "margin: auto;" class="form-group">
                <label class="col-md-4 control-label" for="textinput">Email</label>
                <div class="col-md-4">
                    <input id="textinput" name="emailInput" value="{{userToShow.email}}" class="form-control input-md" type="text"
                        required="">
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Tuổi</label>
                <div class="col-md-4">
                    <input id="textinput" name="ageInput" value="{{userToShow.age}}" class="form-control input-md"
                        type="number" required="">
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Địa chỉ (thành phố)</label>
                <div class="col-md-4">
                    <input id="textinput" name="address_cityInput" value="{{userToShow.address_city}}" class="form-control input-md"
                        type="text" required="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Địa chỉ (quận huyện)</label>
                <div class="col-md-4">
                    <input id="textinput" name="address_districtInput" value="{{userToShow.address_district}}" class="form-control input-md"
                        type="text" required="">
                </div>
            </div>
             <div class="form-group">
                <label class="col-md-4 control-label" for="addressInput">Địa chỉ (số nhà, tên đường)</label>
                <div class="col-md-4">
                    <input id="textinput" name="addressInput" value="{{userToShow.address}}" class="form-control input-md"
                        type="text" required="">
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Hình</label>
                <div class="col-md-4">
                    <input type="file" onchange="previewImage(event)" name="userImage" class="input-group input-file" />
                    <img style="width: 100px; height:100px" id="preview" />
                </div>
            </div>
            <!-- Button (Double) -->
            <div class="form-group">
                <div class="col-md-4">
                    <button type="submit" id="btnSave" name="btnSave" class="btn btn-success">
                        Lưu</button>
                </div>
            </div>
</div>
</fieldset>
</form>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="js/changeAccount.js"></script>

</div>